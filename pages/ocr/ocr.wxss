  min-height: 100px; /* 文本容器的初始高度 */  
  min-width: 300px;
  max-width: 300px;
  padding: 10px;  
  border: 1px solid #ccc; 
  border-radius: 5px;  
  margin-top: 10px;  
  background-color: #fff; 
}

.container image {  
  min-height: 200px; /* 设置一个初始高度 */  
